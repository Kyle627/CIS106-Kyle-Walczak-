#include <iostream>
using namespace std; 


int main(){
    const int employees = 1;
    int salaries[9] = {0};
    float gross;
    int comission;
    
    for (int i = 0; i < employees; i++){
        cout << "Enter gross pay for salesperson #"
        << i + 1 << endl;
        cin >> gross;
        cin.ignore();
        comission = gross * .09;
        comission = comission / 100;
        salaries[comission]++;
    }
    for (int i = 0; i < 9; i++){
        cout << "The number of salespeople earning in range " << 
        (i + 1) * 200 << " - " << ((i + 3) * 100) - 1 << ": " << salaries[i] << endl;
    }
}
